---
import ContactForm from "@/components/ContactForm.astro";
import Section from "@/components/Section.astro"
---
<Section>
<section id="contact" class="contact-container">
    <h2>Contact me</h2>
    <ContactForm />
</section>
</Section>

<style>
    .contact-container {
        display: flex;
        flex-direction: column;
        padding: 0 20px 70px 20px;  
        background-color: #13151a;
        margin-bottom: 100px;
    }

    h2{
        font-size: 2.5rem;
        padding: 20px 0 10px 0;
        display: inline-block;
        position: relative;
        color: #fff;
        margin: 30px 0;
    }

    h2::before {
        content: '';
        position: absolute;
        bottom: 0.80px; 
        left: 0;
        width: 15%; 
        border-bottom: 4px solid #eb6904; 
        white-space: nowrap; 
    }

    body.open .contact-container {
        display: none;
    }

    @media(min-width:768px){
        .contact-container{
            align-items: center;          
        }
    }
</style>