---
const { image, title, description, link, classList = [] } = Astro.props;
---

<article>
    <a class="card" href={link} target="_blank">
        <figure>
            <img src={image} alt={`${title} cover`} />
        </figure>
        <div class="description-container">
            <h4>{title}</h4>
            <p>{description}</p>
        </div> 
    </a>  
</article>

<style>
    article{      
        width: 300px;
        margin: 10px;
    }

    .card{
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        width: 300px;
        height: auto;
    }

    figure{
        width: 300px;  
        height: 300px;      
    }
    figure img{
        width: 100%;
        height: 100%;
        border-radius: 20px;    
    }
    
    .description-container{
        display: flex;
        justify-content: center;
        align-items: center;
        align-content: center;
        flex-direction: column;
        flex-wrap: wrap;
        color: #fff;
        padding: 5px 10px;
    }

    h4{
        font-size: 1.2rem;
        text-transform: uppercase;
        background-image: linear-gradient(225deg, #2B86C5 0%, #784BA0 50%, #eb6904 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        transition: all .2s;
        padding: 5px;
        text-align: center;
    }

    p{
        font-size: 0.90rem;
        text-align: center;
    }

    a{
        color: #61aee5;
        font-weight: 600;
        transition: 0.3s ease-in;
        text-decoration: none;
    }
    a:hover{
        transform: translateY(-10px);
        color: #FF3CAC;
    }

    body.open article, body.open h4, body.open p, .body.open a  {
        display: none;
    }
</style>