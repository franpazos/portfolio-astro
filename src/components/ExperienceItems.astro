---
const {title, position, url, startDate, endDate,  description = [] } = Astro.props;

---

<div class="experience-item">
    <div class="dot"></div>
    <div class="header-container">
        <div>
            {url ? (
                <a href={url} target="_blank" rel="noopener noreferrer">
                    <h3>{title}</h3>
                </a>
            ) : (
                <h3>{title}</h3>
            )}
            <h4>{position}</h4>
        </div>
        <time>{endDate ? `${startDate} - ${endDate}` : startDate}</time>
    </div>
    <p>{description}</p>
</div>
 

<style>
    .experience-item {
        position: relative;
        padding: 25px 0;
    }
    
    .dot {
        position: absolute;
        width: 0.75rem;
        height: 0.75rem;
        background-image: linear-gradient(225deg, #eb6904 50%, #784BA0 50%);
        transform: scale(1.1);
        border-radius: 50%;       
        left: -47px;
        margin-top: 0.375rem;
    }
    
    .header-container{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-direction: column;
        margin-bottom: 4px;
    }

    time {
        padding-bottom: 0.35rem;
        font-size: 0.875rem;
        color: #bababa;
    }
    
    h3, h4 {
        font-weight: 600;
        color: #f9fafb;
        padding-bottom: 0.30rem;
    }

    h3 {
        font-size: 1.5rem;
        color: #eb6904;
    }

    h4{
        font-weight: normal;
    }
    
    p {
        color: #d1d5db; 
    }

    a:hover{
        text-decoration: none;
        cursor: pointer;
    }

    
    body.open .dot, body.open time, body.open h3, body.open h4, body.open p,  body.open a {
        display: none;
   }


    
</style>